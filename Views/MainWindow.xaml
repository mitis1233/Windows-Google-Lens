<local:AcrylicWindow x:Name="MainUIWindow" x:Class="Windows_Google_Lens.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows_Google_Lens.Views"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="Windows Google Lens" Height="250" Width="250" FontSize="16"
        BlurColor="#64000000" BodyBlurColor="#64000000" Background="Transparent">
    <Grid ui:ThemeManager.HasThemeResources="True">
        <Button x:Name="screenshotSearch" Content="Screenshot search" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="169" Height="43" FontWeight="Bold" Click="screenshotSearch_Click" Focusable="False"/>
        <Button x:Name="clipboardSearch" Content="Clipboard search" HorizontalAlignment="Center" Margin="0,58,0,0" VerticalAlignment="Top" Width="169" Height="43" FontWeight="Bold" Click="clipboardSearch_Click" Focusable="False"/>
        <Button x:Name="fileSearch" Content="File search" HorizontalAlignment="Center" Margin="0,151,0,0" VerticalAlignment="Top" Width="169" Height="43" FontWeight="Bold" Click="fileSearch_Click" Focusable="False"/>
    </Grid>
</local:AcrylicWindow>
