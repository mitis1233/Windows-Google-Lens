<local:AcrylicWindow x:Class="Windows_Google_Lens.Views.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows_Google_Lens.Views"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Style="{StaticResource AcrylicWindow}"
        Height="204.8" Width="252.8" Background="#A0000000" Foreground="White">

    <Grid>
        <Grid.RowDefinitions>
            <!-- https://stackoverflow.com/questions/18636744/setting-the-rowdefinition-height-from-staticresource -->
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Height="28">
            <TextBlock VerticalAlignment="Center" Margin="10,2,0,0">Hey from Here</TextBlock>
        </Grid>
        <Canvas Grid.Row="1" Background="#50000000" Margin="0,4,0,0">
            <Grid Margin="10" ui:ThemeManager.HasThemeResources="True">
                <Button Content="Hello there!"></Button>
            </Grid>
        </Canvas>
    </Grid>
</local:AcrylicWindow>
